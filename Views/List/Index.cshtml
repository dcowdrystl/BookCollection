@using BookCollection.Models

@model List<Book>

<h1>List Books</h1>

@if (Model.Count == 0)
{
    <p>No Books in your collection yet!</p>
}

else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
               Book Title
            </th>
            <th>
                Author's First Name
            </th>
            <th>
                Author's Last Name
            </th>
            <th>
                Genre
            </th>
            <th>
                Number of Pages
            </th>
        </tr>

        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.BookTitle</td>
                <td>@book.AuthorFirstName</td>
                <td>@book.AuthorLastName</td>
                <td>@book.Genre</td>
                <td>@book.NumberOfPages</td>
            </tr>
        }
    </table>
}
